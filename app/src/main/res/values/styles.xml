<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PopupBottomAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>

    <style name="PopupTopAnim">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>

    <style name="PopupRightAnim">
        <item name="android:windowEnterAnimation">@anim/right_enter</item>
        <item name="android:windowExitAnimation">@anim/right_exit</item>
    </style>

    <style name="PopupMenuAnim">
        <item name="android:windowEnterAnimation">@anim/menu_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_exit</item>
    </style>

    <style name="top_icon">
        <item name="android:layout_marginStart">@dimen/icon_margin_start</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="pop_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/selector_text_color_clicked</item>
        <item name="android:background">@drawable/selector_bg_clicked</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>
</resources>
